/**app.wxss**/

ff-canvas {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.container .title {
  display: block;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  text-align: center;
  font-size: 28rpx;
}

button {
  font-size: 11pt;
  font-family: inherit;
  margin: 0;
  padding: 0;
}

button::after {
  border: none;
}

.cle::after {
  content: "";
  display: block;
  overflow: hidden;
  clear: both;
  height: 0;
  width: 0;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

page {
  font-size: 11pt;
  font-family: "microsoft yahei", simhei;
  background-color: #fff;
}

@-webkit-keyframes fadeOut {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

@keyframes fadeOut {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.flex {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

.flex-wrap {
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
}

.flex-nowrap {
  -ms-flex-wrap: nowrap;
  flex-wrap: nowrap;
}

.flex-row-reverse {
  flex-direction: row-reverse;
}

.flex-column {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
}

.flex-align-c {
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}

.flex-justify-c {
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.flex-justify-b {
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.flex-justify-a {
  -ms-flex-pack: distribute;
  justify-content: space-around;
}

.line-one {
  overflow: hidden;
