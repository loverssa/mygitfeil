.t-l {
  text-align: left;
}

.t-r {
  text-align: right;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

image {
  display: block;
  width: 100%;
  height: auto;
}

.fix-foot {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 11111;
  width: 100%;
}

/*搜索*/

.search {
  padding: 16rpx 28rpx;
  background-color: #fff;
  box-shadow: 0 2px 4px 2px #eff2f4;
}

.search .search-con {
  height: 64rpx;
  width: calc(100% - 85rpx);
  border-radius: 3px;
  background-color: #f1f4f6;
}

.search .search-con .icon {
  margin: 0 20rpx;
}

.search .search-con .input {
  font-size: 28rpx;
  width: 100%;
}

.search .filtrate {
  width: 64rpx;
  border-radius: 3px;
  height: 64rpx;
  background-color: #f1f4f6;
}

.search .filtrate .icon {
  width: 30rpx;
}

.public-foot-btn {
  padding: 0 28rpx;
  padding-bottom: 30rpx;
  background-color: #f5f8fa;
}

.public-foot-btn .public-btn {
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  background: linear-gradient(to right, #ff65a1, #f78d60);
  box-shadow: 0 1px 2px 1px #faa9c0;
}
